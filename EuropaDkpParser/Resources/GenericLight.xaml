<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="DefaultBackgroundColor">#FFFFFF</SolidColorBrush>
    <SolidColorBrush x:Key="DefaultForegroundColor">#000000</SolidColorBrush>
    <SolidColorBrush x:Key="BidTrackingForegroundOkBrush">Green</SolidColorBrush>
    <SolidColorBrush x:Key="BidTrackingForegroundAlertBrush">Red</SolidColorBrush>

    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="2,0,0,0"/>
    </Style>

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="85"/>
    </Style>
</ResourceDictionary>