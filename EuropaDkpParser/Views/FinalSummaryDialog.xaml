<UserControl x:Class="EuropaDkpParser.Views.FinalSummaryDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EuropaDkpParser.Views" 
             xmlns:viewmodels="clr-namespace:EuropaDkpParser.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:FinalSummaryDialogViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Attendance Calls" Grid.Row="0"/>
        <ListBox ItemsSource="{Binding AttendanceCalls}" Grid.Row="1"/>

        <Label Content="Attendance Calls" Grid.Row="2"/>
        <ListBox ItemsSource="{Binding DkpSpentCalls}" Grid.Row="3"/>

        <Button Content="Create Log File" Command="{Binding CreateLogFileCommand}" Grid.Row="4"/>
    </Grid>
</UserControl>
