<UserControl x:Class="EuropaDkpParser.Views.AttendeesModifierDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EuropaDkpParser.Views"
             xmlns:viewmodels="clr-namespace:EuropaDkpParser.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:AttendeesModifierDialogViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="{StaticResource AttendanceCalls}"/>
                <ListView Grid.Row="1" x:Name="AllAttendancesListing" ItemsSource="{Binding AllAttendances}"/>

                <Grid Grid.Row="2" Visibility="{Binding DisplayResultsMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <ContentControl Content="{StaticResource SuccessCheckIcon}" Visibility="{Binding CommandSuccess, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <ContentControl Content="{StaticResource RedXIcon16}" Visibility="{Binding CommandSuccess, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        <Label Content="{Binding CommandResultsMessage}"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid Grid.Column="1" Margin="5,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Content="{StaticResource Attendees}" Grid.Row="0"/>
                    <ListView Grid.Row="1" ItemsSource="{Binding Attendees}"/>
                </Grid>

                <Label Grid.Row="1" Content="{StaticResource SelectACharacter}" />
                <ComboBox Grid.Row="2" ItemsSource="{Binding AllAttendees}" SelectedItem="{Binding SelectedAttendee}"
                          VerticalContentAlignment="Center" Height="30"/>

                <Grid Grid.Row="3" Margin="0,10,0,0" HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="{StaticResource AddText}" Command="{Binding AddCharacterToSelectedAttendancesCommand}" 
                            Height="30" Width="85"/>
                    <Button Grid.Column="1" Content="{StaticResource Remove}" Command="{Binding RemoveCharacterFromSelectedAttendancesCommand}" 
                            Height="30" Width="85" Margin="10,0,0,0"/>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" Content="{StaticResource OkButtonText}" Command="{Binding CloseOkCommand}" IsDefault="True" HorizontalAlignment="Right" Height="30" Width="85"/>
        </Grid>

    </Grid>
</UserControl>
